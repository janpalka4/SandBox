<UserControl x:Class="SandBox.Controls.DrawCanvasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SandBox.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="640"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="panel" Grid.Row="0">
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <StackPanel>
                <Label Content="Temperature"/>
                <Slider Minimum="0" Value="390" Maximum="40000" ValueChanged="Slider_ValueChanged" Width="200"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
